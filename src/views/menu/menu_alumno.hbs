            aria-controls="v-pills-settings" aria-selected="false">Mis Notas</button>
        <button id="btn-asistencia" onclick="cargarContenido('/menu/asistencia')" class="nav-link text-nowrap"
            data-bs-toggle="pill" data-bs-target="#v-pills-asistencia" type="button" role="tab"
