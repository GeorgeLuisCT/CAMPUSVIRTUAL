            role="tab" aria-controls="v-pills-actualizar-datos" aria-selected="false">Actualizar Datos</button>
        <button id="btn-companeros" onclick="cargarContenido('/menu/companeros')" class="nav-link text-nowrap"
            data-bs-toggle="pill" data-bs-target="#v-pills-companeros" type="button" role="tab"
            aria-controls="v-pills-companeros" aria-selected="false">Mis Compañeros</button>
        <button id="btn-otros-horarios" onclick="cargarContenido('/menu/otros-horarios')" class="nav-link text-nowrap"
            data-bs-toggle="pill" data-bs-target="#v-pills-otros-horarios" type="button" role="tab"
            aria-controls="v-pills-otros-horarios" aria-selected="false">Otros Horarios</button>
        <button id="btn-actividades-integradoras" onclick="cargarContenido('/menu/actividades-integradoras')"
            class="nav-link text-nowrap" data-bs-toggle="pill" data-bs-target="#v-pills-actividades-integradoras"
            type="button" role="tab" aria-controls="v-pills-actividades-integradoras" aria-selected="false">Act.
            Integradoras</button>
    </div>
    <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">

    </div>

    <div class="tab-content w-100" id="v-pills-tabContent">
        {{#ifEqual option "horario"}}
        {{> components/horario}}
        {{else ifEqual option "notas"}}
        {{> components/notas}}
        {{else}}

        {{/ifEqual}}

    </div>

    <div id="loading-message" style="display: none;"
        class="position-absolute top-50 start-50 translate-middle text-center">
        <div class="loader"></div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            cargarContenido('/menu/horario');
        });

        var loadingMessage = document.getElementById('loading-message');
        var loadicontet = document.getElementById('v-pills-tabContent');

        function cargarContenido(url) {
            loadicontet.style.display = 'none';
            loadingMessage.style.display = 'block';
            fetch(url)
                .then(response => response.text())
                .then(data => {
                    document.getElementById('v-pills-tabContent').innerHTML = data;
                })
                .catch(error => {
                    console.error('Error al cargar el contenido:', error);
                })
                .finally(() => {
                    loadingMessage.style.display = 'none';
                    loadicontet.style.display = 'block';
                });
        }
    </script>
</div>